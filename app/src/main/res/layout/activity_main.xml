<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="온양 포스트 문서실"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button

            android:id="@+id/btn_go0"
            android:backgroundTint="@color/white"
            android:background="#FF9800"
            android:layout_weight="1"

            android:textSize="12dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="인ㅁㅎ\n PRO"/>

        <Button
            android:id="@+id/btn_go1"
            android:layout_marginLeft="10dp"
            android:background="#FF9800"
            android:layout_weight="1"
            android:textSize="12dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="김ㅈㄱ\n PRO"/>


        <Button
            android:id="@+id/btn_go2"
            android:layout_marginLeft="10dp"
            android:background="#FF9800"
            android:layout_weight="1"
            android:textSize="12dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="최ㄱㅇ\n PRO"/>


        <Button
            android:id="@+id/btn_go3"
            android:layout_marginLeft="10dp"
            android:background="#FF9800"
            android:layout_weight="1"
            android:textSize="12dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="박준ㅎ\n PRO"/>


        <Button
            android:id="@+id/btn_go5"
            android:layout_marginLeft="10dp"
            android:background="#FF9800"
            android:layout_weight="1"
            android:textSize="12dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="김ㅎㅅ\n PRO"/>

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:text="담당 구역 검색"
                android:textSize="40dp"
                android:id="@+id/btn_A"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <Button
                android:text="시간별 업무"
                android:textSize="40dp"
                android:id="@+id/btn_B"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <Button
                android:text="직원 검색"
                android:textSize="40dp"
                android:id="@+id/btn_C"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <Button
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <Button
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>